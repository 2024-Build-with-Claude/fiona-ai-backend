{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "start:backend"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}